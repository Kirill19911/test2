<style is:global>
    astro-dev-toolbar {
    display: none;
}
	html {
        font-family: 'Inter', sans-serif;
        background-color: #3588c9;
        background-image: url("/src/images/Website-bg.png");
		background-size: cover;
		background-repeat: no-repeat;
		}
		body {
    margin: 0px;
}
*,:before,:after {
    box-sizing: border-box;
}
  main {
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.container{
		width: 100%;
		max-width: 1230px;
		margin: auto;
		padding-left: 15px;
		padding-right: 15px;
	}
	.container-full {
    width: 100%;
    max-width: 100%;
}
.header {
    background-color: rgba(255, 255, 255, 0.72);
    padding: 17px 60px;
}
.header_wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.header a.brand {
    width: 100%;
    max-width: 250px;
}
	img {
    max-width: 100%;
    object-fit: contain;
	max-width: 100%;
}
.notification_icon img {
    height: 54px;
}
.notification_icon {
    position: relative;
}
.notification_icon span.notification_number {
    position: absolute;
    top: 0px;
    right: -14px;
    background-color: #E0162E;
    height: 30px;
    width: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    line-height: 12px;
}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.instructions p {
    font-size: 20px;
    line-height: 1.5;
	max-resolution: 0px 0px 20px;
}
.instructions h3 {
    font-size: 32px;
    line-height: 1.5;
    font-weight: 600;
    margin: 0px 0px 15px;
}
ul.link-card-grid {
    margin: 0px;
    padding: 0px;
}
.instructions {
    padding: 40px 0px 20px;
}
.cards_section {
    padding-top: 30px;
}
span.yellow {
    color: #FAA424;
}
img {
    max-width: 100%;
    object-fit: contain;
	max-width: 100%;
    height: auto !important;
}
ul.link-card-grid {
    padding: 0px;
    margin: 0px;
    list-style: none;
    
}
li.link-card {
    background-color: #F6F6F6;
    border-radius: 20px;
    overflow: hidden;
	color: #000000;
}
li.link-card:not(:last-child) {
    margin-bottom: 50px;
}

.popular_tag {
    color: #000;
    text-align: center;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    background-color: #FAA424;
    padding: 19px 10px;
}
.link-card .card_content {
    padding: 40px 30px 20px;
}
.link-card .card_content .card_body {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
}
.card_body .app_col {
    width: 62%;
}
.card_body .review_col {
    width: 38%;
    padding-left: 30px;
    display: flex;
    flex-wrap: wrap;
    display: flex;
    align-items: center;
}
.review_col .best_spp_box {
    margin-left: auto;
    padding-right: 50px;
    width: calc(100% - 173px);
    text-align: right;
}
.review_col .best_spp_box img{
   width: 100%;
    max-width: 140px;
}
.review_box {
    border-radius: 20px;
    background: #30608A;
    padding: 16px 22px;
    margin-left: auto;
    text-align: center;
    color: #ffffff;
    width: 173px;
}
.review_box h3 {
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    font-size: 32px;
    margin: 0px 0px 5px;
}
.review_box p.user_votes {
    font-size: 12px;
    margin: 0px;
}
.app_info p {
    font-size: 20px;
    margin: 0px;
    font-weight: 500;
}
.app_info img {
    margin: 0px 0px 20px;
}
.cta {
    color: #ffffff;
    display: block;
    background-color: #17D11F;
    text-align: center;
    text-decoration: none;
    border-radius: 100px;
    font-size: 24px;
    padding: 12px 20px;
    transition: all 0.3s linear;
    text-transform: uppercase;
}
.cta:hover{
    background-color:#25A12E;
}
.accordion__item h3 {
    margin: 0px;
    padding: 0px;
}
.accordion__item button {
    padding: 19px 30px;
    color: #FFF;
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: 136.151%; /* 27.23px */
    text-transform: uppercase;
    background-color: transparent;
    border-radius: 20px;
    border: 0px !important;
}
.header__toggle-indicator {
    margin-left: 10px;
    min-width: 20px;
    max-width: 20px;
}
.accordion__item .accordion__panel {
    border: 0px !important;
}
.accordion__item .accordion__panel .panel__inner {
    padding: 0px 30px 19px !important;
}
li.accordion__item {
    border: 2px solid #FFF !important;
    background: rgba(246, 246, 246, 0.15);
    border-radius: 20px;
    padding: 0px;
    margin-bottom: 30px;
}
.accordion__item .accordion__panel .panel__inner p {
    margin: 0px;
    font-size: 20px;
    line-height: 1.5;
}
.accordion__item .accordion__header:focus {
    box-shadow: none !important;
}
.accordian_section {
    padding: 70px 0px;
}
.accordian_section .section_head h2 {
    margin: 0px 0px 30px;
}
.accrodian_wrapper ul.accordion__wrapper {
    padding: 0px 0px 30px;
    margin: 0px !important;
}
.notification_div dialog.modal {
    margin: 0px;
    width: 100%;
    right: 0px;
    left: auto;
    border-width: 0px;
    border-radius: 0px;
    height: 100vh;
    top: 0px;
    bottom: 0px;
    max-height: inherit;
    max-width: 504px;
    padding: 30px;
}

.notification_div dialog.modal .modal__content {
    padding: 0px;
}

.notification_div dialog.modal .modal__close {
    position: absolute;
    top: 30px;
    right: 30px;
    width: auto;
}

.modal__close button {
    background-color: transparent;
    font-size: 20px;
}

.notification_div dialog.modal .modal__content  h3 {
    margin: 0px 0px 40px;
    font-size: 32px;
    line-height: 1.5;
}
.offer_box {
    width: 100%;
    border-radius: 20px;
    border: 3px solid #D2D0D0;
    padding: 25px;
}
.offer_box p {
    margin: 0px;
    font-size: 24px;
    line-height: 1.5;
    font-weight: 500;
    width: 100%;
    max-width: 300px;
    margin: auto;
}
.offer_box .cta {
    margin-top: 40px;
}
.offer_app {
    text-align: center;
}
.offer_app img {
    margin-bottom: 25px;
}
.notification_div dialog.modal .modal__content h3:focus {
    outline: none !important;
}
.notification_div dialog.modal .modal__content h3:focus {
    outline: none !important;
}
.modal .modal__close button {
    font-size: 0px;
    background-color: transparent;
    width: 23px;
    height: 23px;
    padding: 0px;
    position: relative;
}
.modal__close button:before,.modal__close button:after {
    content: "";
    width: 23px;
    background-color: #747474;
    height: 2px;
    display: block;
    border-radius: 20px;
    margin: -1px;
}
.modal__close button:before {
    transform: rotate(45deg);
}
.modal__close button:after {
    transform: rotate(-45deg);
}
.modal .modal__close button:hover, .modal .modal__close button:focus {
    background-color: transparent;
    text-decoration: none;
}

@media (max-width:1199px){
    .header {
    padding: 10px 15px;
}

.header a.brand {
    max-width: 190px;
}

.notification_icon img {
    height: 30px !important;
    width: 100%;
}

.notification_icon span.notification_number {
    height: 20px;
    width: 20px;
    right: -5px;
    top: -6px;
}

.notification_div {
    width: 30px;
    height: 30px;
}

.instructions h3 {
    font-size: 24px;
}

.instructions p {
    font-size: 14px;
}

.popular_tag {
    font-size: 14px;
    padding: 12px 10px;
}

.app_info p {
    font-size: 14px;
}

.cta {
    font-size: 15px;
}

main {
    font-size: 14px;
}

.accordion__item .accordion__panel .panel__inner p {
    font-size: 14px;
}

.accordian_section .section_head h2 {
    font-size: 24px;
}

.accordion__item button {
    font-size: 17px;
    padding: 13px 15px;
}

.accordion__item .accordion__panel .panel__inner {
    padding: 0px 15px 15px !important;
}

.accordian_section {
    padding: 40px 0px;
}

.notification_div dialog.modal .modal__content h3 {
    font-size: 24px;
}

.offer_box p {
    font-size: 20px;
}

.offer_box .cta {
    margin-top: 20px;
}
.review_col .best_spp_box {
    padding-right: 20px;
}
.review_box {
    width: 125px;
    padding: 12px;
}
.review_col .best_spp_box {
    width: calc(100% - 125px);
}
.review_box p.user_votes {
    font-size: 10px;
}
.review_box h3 {
    font-size: 24px;
}
.review_col .best_spp_box img {
    max-width: 90px;
}
}

@media (max-width:767px) {
    .card_body .app_col {
    width: 50%;
    padding-right: 10px;
}

.card_body .review_col {
    width: 50%;
    padding-left: 0px;
}

.link-card .card_content {
    padding: 12px;
}
.link-card .card_content .card_body {
    margin-bottom: 20px;
}  
.accordion__item button {
    justify-content: space-between;
    text-align: left;
}
li.accordion__item {
    border-radius: 10px;
    margin-bottom: 12px;
}
.header__toggle-indicator {
    min-width: 12px;
    max-width: 12px;
}
li.link-card:not(:last-child) {
    margin-bottom: 15px;
}  
.notification_div dialog.modal .modal__close {
    top: 20px;
    right: 13px;
} 
.notification_div dialog.modal {
    padding: 20px;
}
.app_info img {
    margin: 0px 0px 5px;
    max-width: 100px;
}
.app_info p {
    font-size: 12px;
    line-height: 1.4;
}
.cta {
    font-weight: 500;
}
.offer_box p {
    font-size: 14px;
}
.notification_div dialog.modal .modal__content h3 {
    font-size: 20px;
}
}

@media (max-width:480px) {
    .review_col .best_spp_box img {
    max-width: 60px;
}
.review_col .best_spp_box {
    width: 100%;
    padding-right: 0px;
}  
}

</style>
